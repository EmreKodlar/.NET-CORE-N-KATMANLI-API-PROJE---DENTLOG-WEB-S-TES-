@model EntityLayer.Concrete.KategoriVeBlog
@{
    ViewData["Title"] = "Yeni Blog Ekle";
    Layout = "~/Views/Shared/Writer_Layout.cshtml";


}
<script src="~/ckeditor/jquery/jquery.js"></script>
<script src="~/ckeditor/ckeditor.js" type="text/javascript"></script>
<script src="~/ckeditor/ckeditorJS.js"></script>

 

<h3>YENİ BLOG EKLEME PANELİ</h3>


<form action="/Blog/NewBlog" name="blogekleme" method="post" enctype="multipart/form-data">

    <br />
    <input class="form-control" type="text" name="BlogTitle" placeholder="Lütfen Başlık Giriniz" style="text-transform: capitalize;" required /><br />

    @Html.DropDownListFor(m => m.CategoryID, ViewBag.kategoriler as SelectList, "Lütfen Kategori Seçiniz", new { @class = "form-control", required = "required" })
    <br />
    <textarea id="editor1" class="form-control" minlength="110" rows="10" name="BlogContent" placeholder="Lütfen İçerik Giriniz" required></textarea>

    <input class="form-control" type="hidden" name="BlogThumbnailImageName" value="/Core_Blog_Tema/web/images/2.jpg" />
    <br /> <input class="form-control" type="file" name="BloglImage" placeholder="Lütfen Resim Ekleyiniz" />
    <input class="form-control" type="hidden" name="BlogStatus" value="True" />
    <input class="form-control" type="hidden" name="BlogCreateContent" value="@DateTime.Now.ToString("dd-MM-yyyy")" />
    <input class="form-control" type="hidden" name="WriterID" value="@ViewBag.Writer_ID" />
    <br />
    <button class="btn btn-primary">EKLE</button>
</form>

<script>
    $(document).ready(function () {
        CKEDITOR.replace('editor1', {
            customConfig: '/ckeditor/Config.js'
        });
    });
</script>

