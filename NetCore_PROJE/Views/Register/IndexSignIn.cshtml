
@{
    ViewData["Title"] = "Giriş Paenli";
    Layout = "~/Views/Shared/UI_Layout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Giriş Yapın</h3>

            @if(@TempData["error"] != null)
            {
            <div class="alert alert-danger">@TempData["error"]</div>
            }


        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form  method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">E-mail:</label>
                        <input type="email" class="form-control" name="WriterMail" id="WriterMail"    required="">
                      
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Şifre:</label>
                        <input type="password" name="WriterPassword" id="WriterPassword"  class="form-control"  required="">
                    </div>
                   
                    <button  class="btn btn-primary submit mb-4">GİRİŞ YAP</button>
                    <p><a href="/Register/IndexRegister/"> Yeni Hesap Aç</a></p>
                </form>
            </div>
        </div>
    </div>
</section>

