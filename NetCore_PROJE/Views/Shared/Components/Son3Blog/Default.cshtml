@model List<EntityLayer.Concrete.Blog>
@using NetCore_PROJE.Controllers

@foreach (var item in Model)
{
    <div class="col-lg-4 footer-grid-agileits-w3ls text-left">

        <div class="tech-btm">
            <div class="blog-grids row mb-3">
                <div class="col-md-5 blog-grid-left">
                    <a href="/Blog/BlogDetails/@item.BlogID/@Seo.AdresDuzenle(@item.BlogTitle)">
                        <img src="/images/@item.BloglImageName" class="card-img-top img-fluid" alt="@item.BlogTitle">
                    </a>
                </div>
                <div class="col-md-7 blog-grid-right">

                    <h5>
                        <a href="/Blog/BlogDetails/@item.BlogID/@Seo.AdresDuzenle(@item.BlogTitle)">@item.BlogTitle</a>
                    </h5>
                    <div class="sub-meta">

                        <span>

                            <i class="far fa-clock"></i> @item.BlogCreateContent
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
